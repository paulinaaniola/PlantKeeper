<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_plants_list">

    <fragment
        android:id="@+id/navigation_plants_list"
        android:name="com.example.plantkeeper.ui.plantslist.PlantsFragment"
        tools:layout="@layout/fragment_plants" />

    <fragment
        android:id="@+id/navigation_add_edit_plant"
        android:name="com.example.plantkeeper.ui.addeditplant.AddEditPlantFragment"
        tools:layout="@layout/fragment_add_edit_plant">
        <action
            android:id="@+id/action_navigate_back_to_plants"
            app:destination="@id/navigation_plants_list"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/navigation_plants_list"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>